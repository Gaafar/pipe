.query-list-route
    display flex
    
    > div
        overflow auto
        height 100%

    .menu
        background white
        border-right 1px solid #eee
        box-sizing border-box
        padding 10px
        a
            color #0099ff
            font-size 24px
            text-decoration none
            text-transform capitalize
        .selected-tags 
            color green
            font-size 12px
            margin 20px 0px 5px 0px
            &:before 
                color black
                content "Selected tags: "
        input 
            border 1px solid #ccc
            margin-bottom 4px
            outline none
            padding 8px
            width 280px
        .tags 
            overflow auto
            height 100%
            .tag 
                border-radius 8px
                cursor pointer
                margin 2px 0px
                padding 8px
                text-shadow 0px 1px 0px white
                &.selected
                    background gold
        width 300px

    .queries-container
        width -webkit-calc(100% - 300px)
        > input
            border none
            border-bottom 1px solid #ccc
            box-shadow 0px 4px 1px rgba(0,0,0,0.05)
            font-size 18px
            margin-bottom 20px
            outline none
            padding 10px 0px
            position fixed
            left 320px
            width -webkit-calc(100% - 340px)
        .queries
            display flex
            flex-direction row
            flex-wrap wrap
            margin-top 60px
            .query 
                display flex
                flex-direction column
                margin 0px 0px 20px 20px
                width 320px
                img 
                    border 1px solid #ccc
                    width 320px
                    height 240px
                a 
                    color #0099ff
                    font-size 14px
                    text-transform lowercase
                .tags
                    .tag
                        background-color #d0d0d0
                        border-radius 8px
                        color #444
                        display inline-block
                        margin 8px 2px 0px 2px
                        padding 8px
                        text-shadow 0px 1px 0px white    
                        &:first-child 
                            margin-left 0px
                        &.selected
                            background-color gold
