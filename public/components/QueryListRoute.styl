body 
    overflow hidden

.query-list-route
    display flex    

    > div
        overflow auto
        height 100%

    .menu
        background #434745
        border-right 1px solid #eee
        box-shadow inset -1px 0px 6px 0px rgba(0,0,0,0.2)
        box-sizing border-box
        color #B7B9B9
        position relative
        width 300px
        
        a
            color white
            display inline-flex
            align-items center
            justify-content center
            font-size 24px
            text-decoration none
            text-transform capitalize
            margin 50px 20px 0px 20px
            &:before
                content '\E212'
                display inline-block
                font-size 26px
                font-family slackicons
                font-weight lighter
                margin-right 5px
                text-align center
                vertical-align middle

        .title
            padding 0px 0px 0px 24px
            margin 30px 0px 8px 0px

        .tags 
            overflow auto
            width 280px
            .tag 
                border-radius 4px
                cursor pointer
                font-size 14px
                font-style italic
                padding 3px 5px 3px 40px
                margin-bottom 4px
                &:before
                    background-color #b7b9b9
                    border-radius 32px
                    content ""
                    display inline-block
                    margin-right 6px
                    width 8px
                    height 8px
                &.selected
                    background #D39B46
                    border-bottom-left-radius 0px
                    border-top-left-radius 0px
                    color white
                    &:before
                        background-color white

        .copy-right
            color #ccc
            font-size 12px
            text-align right
            position absolute
            bottom 24px
            right 24px

    .queries-container
        overflow hidden
        width vendor-value(calc(100% - 300px), only: webkit moz official)
        
        .controls
            background-color white
            padding 30px 30px 16px 30px
            position relative
            height 40px
            z-index 1
            &.shadow
                box-shadow 0px 1px 4px rgba(0,0,0,0.2)

            .title
                float left
                font-size 24px
            
            .search-container
                float right
                position relative
                &:before
                    content '\E010'
                    font-family slackicons
                    font-size 20px
                    opacity 0.4
                    transition opacity 0.2s 0s ease
                    position absolute
                    left 12px
                    top -2px
                    z-index 10
                
                input
                    border 1px solid #e6e6e6
                    border-radius 32px
                    box-shadow inset 0px 1px 5px 0px rgba(0,0,0,0.1)
                    font-size 16px
                    outline none
                    padding 8px
                    text-indent 30px
                    position relative
                    top -5px
                    width 450px
                    transition width 0.2s 0s ease
                
                &.expanded
                    &:before
                        opacity 0.75
                    input
                        width 650px

        .queries
            display flex
            flex-direction row
            flex-wrap wrap
            overflow auto
            position relative
            width 100%
            max-height vendor-value(calc(100% - 110px), only: webkit moz official)                
            z-index 0

            .query 
                background-color #f7f7f7
                border 1px solid #dbd8d8
                border-radius 4px
                border-width 1px 1px 2px 1px
                box-shadow 0 1px 0 #e7e7e7
                color #5c5853
                cursor pointer
                display flex
                flex-direction column
                margin 0px 0px 24px 24px
                text-decoration none
                width 370px
                
                .thumbnail
                    background-color white
                    background-position center
                    background-repeat no-repeat
                    background-size contain
                    width 100%
                    height 190px
                
                .info                    
                    border-top 1px solid #dbd8d8
                    
                    .title
                        padding 8px
                    
                    .tags
                        display flex
                        justify-content flex-end   
                        color #666
                        font-size 12px
                        font-style italic
                        margin 4px
                        text-shadow 0px 1px 0px white
                        .tag:not(:last-child):after
                            content ","
                            margin-right 4px



