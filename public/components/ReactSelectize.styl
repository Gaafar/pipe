@require '../../node_modules/react-selectize/themes/index.css'

.react-selectize.dark
    font-family Helvetica Neue, Helvetica, Arial, sans-serif

.react-selectize.dark.control-wrapper
    display inline-block
    width 300px

    .react-selectize-control
        background-color white
        border 1px solid black
        border-radius 4px
        box-shadow inset 1px 2px 3px 0 rgba(0, 0, 0, 0.5)

        .react-selectize-placeholder
            text-indent 8px

        .react-selectize-selected-values
            padding-left 5px

    &.open

        &.flipped

            .react-selectize-control
                border-bottom-left-radius 4px
                border-bottom-right-radius 4px
                border-top-left-radius 0px
                border-top-right-radius 0px

        &:not(.flipped)
            
            .react-selectize-control
                border-bottom-left-radius 0px
                border-bottom-right-radius 0px
                border-top-left-radius 4px
                border-top-right-radius 4px


// dropdown-menu present in document.body when props.tether is true
.react-selectize.dark.dropdown-menu
    background-color rgb(73, 73, 73)
    box-shadow 0px 1px 5px rgba(0,0,0,0.4)
    border none

    &.flipped
        border-top-left-radius 4px
        border-top-right-radius 4px

    &:not(.flipped)
        border-bottom-left-radius 4px
        border-bottom-right-radius 4px

    .simple-group-title
        display flex
        align-items center
        color #fff
        padding 5px 8px

    .option-wrapper
        &.highlight
            background-color #262626

        .simple-option
            border 1px solid rgba(0, 0, 0, 0.3)
            box-shadow 0px 1px rgba(255, 255, 255, 0.06), 0px 1px rgba(255, 255, 255, 0.06) inset
            color white
            padding 5px 10px

    .no-results-found
        padding 5px 10px

    .simple-option a, .no-results-found a 
        color #a0b42a

// MULTI SELECT
.multi-select.react-selectize.dark.control-wrapper .react-selectize-selected-values .simple-value
    background #efefef
    border-radius 4px
    color #333