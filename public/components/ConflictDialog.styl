.conflict-dialog    
    background linear-gradient(#454545, #222)
    border 1px solid #444
    box-shadow 0 2px 12px #000
    padding 8px
    display flex    
    align-items center
    flex-direction column
    justify-content center

    h1
        color: white
        font-size: 16px
        font-weight: normal
        text-shadow 0px -1px 0px black

    svg 
        circle
            fill: #ff9900
            stroke: white

            &:first-of-type
                fill: #0099ff

            &.dim
                fill: rgba(0,0,0,0)

            &.highlight         
                fill: rgba(0,255,0,1)    

        line    
            stroke: white

        circle, line

            &.dim           
                stroke-dasharray: 6,6
            stroke-opacity: 0.3

    .buttons 

        margin-top: 8px

        button
            background: linear-gradient(#4d4d4d, #2f2f2f)        
            border: 1px solid black
            border-radius 4px
            box-sizing: border-box
            color: white
            cursor: pointer
            display: inline-block      
            float: right
            font-size: 16px
            margin-right: 4px
            outline: none
            text-align: center
            text-decoration: none
            text-shadow 0px -1px 0px black
            user-select: none
            -webkit-user-select: none
            vertical-align: top
            width: 120px    
            height 40px

            &:hover
                background: linear-gradient(#5a5a5a, #3c3c3c)

    
