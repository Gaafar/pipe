.document-route

    .vertical-nav
        position absolute

    .vertical-split-pane
        position relative

    .dialog-container
        align-items center
        background-color rgba(0,0,0,0.4)
        display flex
        justify-content center
        position absolute
        left 0px
        top 0px
        width 100%
        height 100%
        z-index 10
       
    .presentation-container
        position absolute

        &.executing:after
            align-items center
            background-color rgba(0,0,0,0.6)
            color white
            content 'Executing ...'
            display flex
            font-size 5em
            justify-content center
            position absolute
            top 0
            left 0
            bottom 0
            right 0

        .presentation
            background-color #171717
            overflow auto
            position: absolute
            top: 0
            left: 0
            right: 0
            bottom: 25px