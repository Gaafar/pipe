.menu 
    background linear-gradient(#111, #222)
    border-bottom 1px solid rgba(255,255,255,0.2)
    box-sizing border-box
    display flex
    font-size 0px
    height 50px  
        
    .buttons 
        align-items center
        display flex        
        a
            align-items center
            background linear-gradient(#4d4d4d, #2f2f2f)
            border 1px solid black
            border-radius 4px
            box-sizing border-box
            color white
            cursor pointer
            display flex
            font-size 14px
            justify-content center
            margin-right 4px
            padding 0px 20px
            text-align center            
            text-decoration none
            text-shadow 0px -1px 0px black
            user-select none
            -webkit-user-select none
            vertical-align top
            position relative
            height 40px

            &:active 
              -webkit-transform translateY(1px)
        
            &.highlight
                border-top 2px solid

                &.green
                    border-top-color green

                &.orange
                    border-top-color  orange
        .separator
            background #333
            margin 0px 5px 0px 0px
            width 1px
            height 100%

    .logo
        background-image url(/public/images/mongodb-logo.png)
        background-position 20px center
        background-repeat no-repeat
        background-size 70%
        font-size 28px
        line-height 64px
        width 120px
        height 50px
