.simple-button
      background linear-gradient(rgb(129, 224, 88), rgb(24, 122, 20))      
      padding 4px 20px
      border-radius 4px
      cursor pointer
      border 1px solid #000
      box-sizing border-box
      text-shadow 0px -1px 0px rgba(0,0,0,0.4)
      text-align center
      font-size 14px
      margin-top 4px

    &.pressed
        background green



