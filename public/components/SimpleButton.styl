.simple-button
      background linear-gradient(rgb(129, 224, 88), rgb(24, 122, 20))      
      border 1px solid #000
      border-radius 4px
      box-sizing border-box
      cursor pointer
      font-size 14px
      margin-top 4px
      padding 4px 20px
      text-align center
      text-shadow 0px -1px 0px rgba(0,0,0,0.4)

    &.pressed
        background green



