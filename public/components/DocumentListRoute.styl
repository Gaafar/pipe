@require 'Menu'
@require 'Document'

.document-list-route
    display flex
    flex-direction column
    align-items center

    .document-list
        display flex
        flex-direction column
        width 900px

        .search
            align-self flex-end
            background none 
            border none
            border-bottom 1px solid #3a3a3a
            color #959595
            font-size 16px
            margin 35px 0px
            padding 7px 0px
            outline none
            text-indent 24px
            width 230px

        .documents 
            display flex
            flex-wrap wrap

            .document
                margin-bottom 20px
                width 230px
                
                &:nth-child(3n + 2)
                    margin-left 105px
                    margin-right 105px