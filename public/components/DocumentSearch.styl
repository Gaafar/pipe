.document-search 
    box-sizing border-box
    padding 10px

    .search
        align-self flex-end
        background none 
        border none
        border-bottom 1px solid #3a3a3a
        color #959595
        font-size 16px
        margin 0px 0px 10px 0px 
        padding 7px 0px
        outline none
        text-indent 24px
        width 230px
    
    .documents 
        overflow auto
        height 645px

        .document-search-item 
            border 1px solid #3a3a3a
            box-sizing border-box
            margin-bottom 10px
            position relative
            width 230px  
            height 140px  

            img 
                width 100%
                height 100%

            .title 
                background-color rgba(0, 0, 0, 0.7)
                color #d8d8d8
                display flex
                text-indent 10px
                font-size 13px
                align-items center
                position absolute
                bottom 0px
                height 50px
                width 100%
