.dialog 
    background-color #303130
    border-top-left-radius 5px
    border-top-right-radius 5px
    box-shadow 0 2px 10px 1px #000000
    color #f1f1f1
    font-size 14px

    .header 
        background-image linear-gradient(top, #404143 0%, #333537 52%, #252729 52%, #252729 100%)
        border-top-left-radius 5px
        border-top-right-radius 5px
        height 36px    
        display flex
        align-items center
        font-size 16px
        padding-left 8px
        text-shadow 0px -1px 0px black

    > .section
        color #f1f1f1
        padding 12px 16px

    .footer 
        background-color #2b2b2b
        box-shadow inset 0 1px black, inset 0 2px rgba(255, 255, 255, 0.1)
        display flex
        align-items center
        justify-content flex-end    
        height 44px

        > button 
            margin-right 8px