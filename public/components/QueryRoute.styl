@import 'Menu'
@import 'Popup'
@import 'DateSourcePopup'
@import 'SharePopup'
@import 'ConflictDialog'
@import '../presentation/presentation'
 
.query-route

    .dialog-container
        align-items center
        background-color rgba(0,0,0,0.4)
        display flex
        justify-content center
        position absolute
        left 0px
        top 0px
        width 100%
        height 100%
        z-index 10

    .content
        background #272822
        font-size 1vh
        white-space nowrap

        > div
            display inline-block
            vertical-align top     
         
        .editors .editor
            .editor-title
                background #1d1f20
                box-sizing border-box
                border-bottom 1px solid rgba(255,255,255,0.1)
                color #999
                display block
                font-size 18px
                height 40px    
                line-height 40px
                padding 0px 0px 0px 8px
                vertical-align middle        

                input
                    appearance none
                    background none
                    border none
                    color white
                    font-size 18px
                    font-weight normal
                    line-height 40px
                    outline none
                    padding 0px
                    margin 0px
                    vertical-align middle
                    width 100%
                    height 40px

            .resize-handle
                background linear-gradient(to bottom, #505050, #383838)
                cursor row-resize
                height 5px

        > .resize-handle
            background linear-gradient(to right, #505050, #383838)
            border-left 1px solid black
            border-right 1px solid black
            box-sizing border-box
            cursor ew-resize
            width 10px
            height -webkit-calc(100% - 50px)

        .presentation-container
            position absolute

            .presentation
                background rgba(29, 30, 25, 0)
                color rgb(196, 197, 180)
                overflow auto
                width 100%
                height 100%

            .status-bar
                background #1d1f20
                border-top 1px solid rgba(255,255,255,0.1)
                color white
                display flex 
                flex-direction row
                flex-wrap nowrap
                font-size 12px
                position absolute
                bottom 0px
                width 100%
                height 24px

                > div 
                    padding 5px 10px
                    label:after
                        content ": "
                    span
                        color #0099ff



